            padding-left: 32px;
            font-weight: 900;
            font-style: normal;
            line-height: 1.44;
            letter-spacing: normal;
        }
        
        .div-h3 {
            font-family: 'Lato', sans-serif;
            font-size: 11px;
            font-weight: 400;
            font-style: normal;
            line-height: 1.44;
            letter-spacing: normal;
        }
        /*comn uses*/
        
        .d-flex {
            display: -webkit-flex;
        }
        
        .txt-alg-cntr {
            text-align: center;
        }
        
        .txt-alg-right {
            text-align: right;
        }
        
        .txt-alg-left {
            text-align: left;
        }
        
        .width-20 {
