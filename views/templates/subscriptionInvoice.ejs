        .p-24 {
            padding: 24px;
        }
        
        .p-btm-16 {
            padding-bottom: 16px;
        }
        
        .p-box-one {
            padding: 40px;
            padding-right: 0px;
            padding-left: 80px;
        }
        
        .p-8 {
            padding: 8px;
        }
        
        .p-left-25 {
            padding-left: 25px;
        }
        
        .p-right {
            padding-right: 8px;
